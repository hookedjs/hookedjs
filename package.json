{
  "name": "@bdombro/hookedjs",
  "version": "0.6.1",
  "description": "Example application for running a fullstack, serverless Node API app on AWS",
  "main": "src/server.js",
  "license": "ISC",
  "scripts": {
    "prepare": "if [ -d \".git\" ]; then husky install; fi",
    "dev": "PORT=4000 run-p api:dev web:dev",
    "build": "pnpm web:build && pnpm api:build",
    "start": "pnpm api:start",
    "web:dev": "snowpack dev --secure --polyfill-node",
    "//web:build:hint": "must mv lib out of public to avoid adding hashes to the filenames",
    "web:build": "mv public/lib . && NODE_ENV=production snowpack build && cp -r lib web-build && mv lib public && workbox generateSW && date > web-build/buildTime.txt",
    "web:test": "web-test-runner \"src/**/*.test.tsx\"",
    "api:build": "pnpm lint && tsc && SAM_CLI_TELEMETRY=0 sam build && pnpm api:clean",
    "api:clean": "tsc -b --clean",
    "api:start": "ts-node src/server.node.ts",
    "api:dev": "ts-node-dev --transpile-only src/server.node.ts",
    "validate": "pnpm lint && tsc --noEmit",
    "lint": "eslint --cache --ext .ts,.tsx",
    "couch:db": "pouchdb-server --port 5984 -d db -n -c couchdb.config.json"
  },
  "files": [
    "src",
    "web-build"
  ],
  "imports": {
    "#hint": "Subpath folder mappings are deprecated after node v16 -- Maybe consider npm/module-alias later",
    "#src/": "./src/",
    "#lib/": "./src/lib/",
    "#db/": "./src/db/"
  },
  "dependencies": {
    "@types/pouchdb": "^6.4.0",
    "fastify": "~3.14.2",
    "fastify-file-upload": "~3.0.0",
    "fastify-helmet": "~5.1.0",
    "fastify-http-proxy": "^6.0.0",
    "fastify-static": "~3.3.1",
    "helmet": "^4.6.0",
    "http2-proxy": "~5.0.53",
    "nanoid": "^3.1.23",
    "npm-run-all": "~4.1.5",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^7.2.2"
  },
  "devDependencies": {
    "@prefresh/snowpack": "~3.1.0",
    "@snowpack/plugin-typescript": "~1.2.1",
    "@snowpack/web-test-runner-plugin": "~0.2.2",
    "@testing-library/preact": "~2.0.1",
    "@types/chai": "~4.2.14",
    "@types/node": "~14.14.41",
    "@typescript-eslint/eslint-plugin": "~4.8.2",
    "@typescript-eslint/parser": "~4.8.2",
    "@web/test-runner": "~0.13.3",
    "chai": "~4.3.4",
    "eslint": "~7.18.0",
    "eslint-plugin-simple-import-sort": "~6.0.1",
    "husky": "~6.0.0",
    "mdi-paths-split": "~5.9.55",
    "preact": "~10.5.13",
    "snowpack": "~3.5.2",
    "snowpack-plugin-hash": "~0.16.0",
    "ts-node": "~9.1.1",
    "ts-node-dev": "~1.1.8",
    "typescript": "~4.4.2",
    "workbox-cli": "~6.0.2"
  },
  "engines": {
    "node": ">=14 <15"
  }
}
