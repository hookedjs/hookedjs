{
  "name": "@bdombro/hookedjs",
  "version": "0.6.1",
  "description": "Example application for running a fullstack, serverless Node API app on AWS",
  "main": "src/server.js",
  "license": "ISC",
  "scripts": {
    "prepare": "if [ -d \".git\" ]; then husky install; fi",
    "dev": "run-p db:dev api:dev web:dev",
    "build": "run-p web:build api:build",
    "start": "npm run api:start",
    "web:dev": "vite",
    "web:build": "vite build && date > dist/buildTime.txt",
    "web:preview": "vite preview",
    "api:build": "npm run lint && tsc && SAM_CLI_TELEMETRY=0 sam build && npm run api:clean",
    "api:clean": "tsc -b --clean",
    "api:dev": "ts-node-dev --transpile-only -P tsconfig.node.json src/api/api.node.ts",
    "gateway:start": "ts-node-dev --transpile-only -P tsconfig.node.json src/api/gateway.node.ts",
    "format:all": "prettier --write .",
    "format:changed": "pretty-quick --staged",
    "lint": "tsc --noEmit",
    "db:dev": "pouchdb-server --port 5984 -d db -n -c db/couchdb.config.json --dir db/data",
    "db:seed": "ts-node --transpile-only -P tsconfig.node.json db/seed",
    "db:clean": "rm -rf db/data && mkdir db/data",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "files": [
    "src",
    "dist"
  ],
  "imports": {
    "#hint": "Subpath folder mappings are deprecated after node v16 -- Maybe consider npm/module-alias later",
    "#src/": "./src/"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "/lib/polyfills",
      "<THIRD_PARTY_MODULES>",
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "fastify": "3.27.0",
    "fastify-helmet": "7.0.1",
    "fastify-http-proxy": "6.2.1",
    "fastify-plugin": "3.0.1",
    "fastify-static": "4.5.0",
    "glob": "7.2.0",
    "helmet": "4.6.0",
    "nanoid": "3.1.23",
    "node-fetch": "2.6.2",
    "nodemailer": "6.7.2",
    "npm-run-all": "4.1.5",
    "pouchdb": "7.2.2",
    "pouchdb-find": "7.2.2",
    "pouchdb-server": "4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@mdx-js/preact": "2.1.1",
    "@preact/preset-vite": "2.1.5",
    "@storybook/addon-actions": "6.5.9",
    "@storybook/addon-essentials": "6.5.9",
    "@storybook/addon-interactions": "6.5.9",
    "@storybook/addon-links": "6.5.9",
    "@storybook/builder-vite": "0.1.36",
    "@storybook/preact": "6.5.9",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/preact": "3.2.2",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@tsconfig/node16": "1.0.3",
    "@types/glob": "7.2.0",
    "@types/node": "16.11.7",
    "@types/node-fetch": "2.6.2",
    "@types/nodemailer": "6.4.4",
    "@types/pouchdb": "6.4.0",
    "@vitest/ui": "0.15.1",
    "babel-loader": "^8.2.5",
    "casual": "1.6.2",
    "core-js": "3.23.1",
    "events": "3.3.0",
    "husky": "6.0.0",
    "hygen": "^6.2.7",
    "jsdom": "^19.0.0",
    "mdi-paths-split": "5.9.55",
    "preact": "10.5.15",
    "prettier": "2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.4",
    "vite": "2.9.12",
    "vite-plugin-pwa": "0.12.0",
    "vitest": "0.15.1",
    "zx": "^7.0.0"
  },
  "engines": {
    "node": "16.14.0"
  }
}
