{
  "name": "@bdombro/hookedjs",
  "version": "0.6.1",
  "description": "Example application for running a fullstack, serverless Node API app on AWS",
  "main": "src/server.js",
  "license": "ISC",
  "scripts": {
    "prepare": "if [ -d \".git\" ]; then husky install; fi",
    "dev": "run-p db:dev api:dev web:dev",
    "build": "run-p web:build api:build",
    "start": "npm run api:start",
    "web:dev": "vite",
    "web:build": "vite build && date > dist/buildTime.txt",
    "web:preview": "vite preview",
    "api:build": "npm run lint && tsc && SAM_CLI_TELEMETRY=0 sam build && npm run api:clean",
    "api:clean": "tsc -b --clean",
    "api:dev": "sleep 3 && ts-node-dev --transpile-only -P tsconfig.node.json src/api/api.node.ts",
    "gateway:start": "ts-node-dev --transpile-only -P tsconfig.node.json src/api/gateway.node.ts",
    "validate": "npm run lint && tsc --noEmit",
    "lint": "eslint --cache --ext .ts,.tsx",
    "db:dev": "pouchdb-server --port 5984 -d db -n -c db/couchdb.config.json --dir db/data",
    "db:seed": "ts-node --transpile-only -P tsconfig.node.json db/seed",
    "db:clean": "rm -rf db/data && mkdir db/data"
  },
  "files": [
    "src",
    "dist"
  ],
  "imports": {
    "#hint": "Subpath folder mappings are deprecated after node v16 -- Maybe consider npm/module-alias later",
    "#src/": "./src/"
  },
  "dependencies": {
    "fastify": "~3.27.0",
    "fastify-helmet": "~7.0.1",
    "fastify-http-proxy": "^6.2.1",
    "fastify-plugin": "^3.0.1",
    "fastify-static": "~4.5.0",
    "glob": "^7.2.0",
    "helmet": "^4.6.0",
    "nanoid": "^3.1.23",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.7.2",
    "npm-run-all": "~4.1.5",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-server": "^4.2.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.1.5",
    "@tsconfig/node16": "^1.0.3",
    "@types/glob": "^7.2.0",
    "@types/node": "~14.14.41",
    "@types/node-fetch": "2",
    "@types/nodemailer": "^6.4.4",
    "@types/pouchdb": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "~4.8.2",
    "@typescript-eslint/parser": "~4.8.2",
    "casual": "^1.6.2",
    "eslint": "~7.18.0",
    "eslint-plugin-simple-import-sort": "~6.0.1",
    "events": "^3.3.0",
    "husky": "~6.0.0",
    "mdi-paths-split": "~5.9.55",
    "preact": "~10.5.15",
    "ts-node": "~9.1.1",
    "ts-node-dev": "~1.1.8",
    "typescript": "~4.5.4",
    "vite": "^2.9.9",
    "vite-plugin-pwa": "^0.12.0"
  },
  "engines": {
    "node": "^16"
  }
}
